@model PecaDica.App.Models.ListaItemViewModel<PecaDica.App.ProdutoServicos.Produto>

@{
    ViewBag.Title = "Index";
}
@{ Html.RenderPartial("Menu");}


<h2>Cadastro de Produtos</h2>
<div>
           @Html.PaginasLinks(Model.InformacaoDePaginacao, x => Url.Action("Index", new { pagina = x, Items = Model.Items }))
</div>
<p>
    @Html.ActionLink("Novo", "Novo")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
